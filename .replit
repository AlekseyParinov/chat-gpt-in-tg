modules = ["python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Health Check"

[[workflows.workflow]]
name = "Health Check"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
python -c \"from http.server import HTTPServer, BaseHTTPRequestHandler
import socket

class H(BaseHTTPRequestHandler):
    def do_GET(self):
        self.send_response(200)
        self.end_headers()
        self.wfile.write(b'Bot runs on production server')
    def log_message(self, *args): pass

sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
sock.setsockopt(socket.SOL_SOCKET, socket.SO_REUSEADDR, 1)
sock.bind(('0.0.0.0', 5000))
sock.listen(1)
sock.close()

print('Dev server on port 5000 - Bot runs only in production')
HTTPServer(('0.0.0.0', 5000), H).serve_forever()\""""
waitForPort = 5000

[deployment]
deploymentTarget = "vm"
run = ["python", "bot.py"]

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.production]
